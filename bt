//#include <SoftwareSerial.h>
char in;

//SoftwareSerial BTSerial(8,9); // RX | TX

void setup()
{
  //BTSerial.begin(38400);
  Serial.begin(38400);
  pinMode(13,OUTPUT);
}

void loop() {
   if(Serial.available())
   {
    
    in = Serial.read();
    if(in == '1')
      {
        digitalWrite(13,HIGH);
      }
    else if(in == '0')
      {
        digitalWrite(13,LOW);
      }
   delay(50);
delay(50);
   }
SomeCodeHere
}
